<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Seus eventos</title>
    <link rel="stylesheet" href="../../../css/eventsCSS/meus-eventosCss/meus-eventos.css">
    <link rel="stylesheet" href="../../../css/eventsCSS/meus-eventosCss/meus-eventosMobile.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="shortcut icon" href="../../../imagens/favicon.ico" type="image/x-icon">
</head>
<body>
    <div id="div-pai">
        <header>
            <h1 class="titulo">Gerência</h1>
            <a href="/homepage">
                <div id="header-image">
                
                </div>
            </a>
            <h1 class="titulo">Eventos</h1>
        </header>

        <div id="container-titulo">
            <h1 id="titulo-2">Meus eventos:</h1>
            <h3 id="h3-voltar">
                <a href="/homepage">
                    Voltar para homepage
                    <i class="material-icons">undo</i>
                </a>
            </h3>
        </div>

        <div id="container-homepage">
            <div id="container-publications">
                <% if(myEvents.length === 0) { %>
                    <div id="modal" class="modal">
                        <div class="modal-content">
                            <h2 id="h2-modal">Você não tem nenhum evento ainda</h2>
                            <i class="material-icons">close</i>
                            <p id="p-modal">Crie seu evento na página principal</p>
                            <a href="/homepage">
                                <button id="close-modal-btn" class="modal-button">Página principal</button>
                            </a>
                        </div>
                    </div>
                <% } else { %>
                    <% myEvents.forEach((dados) => { %>
                        <div id="publications-homepage">
                            <div id="event-banner">
                                <% if (dados.imageBase64) { %>
                                    <img id="img-banner" src="<%= dados.imageEvent %>" alt="">
                                <% } else { %>
                                    <img id="img-banner" src="../../imagens/SEM FOTO DE EVENTO.png" alt="">
                                <% } %>

                                <div id="event-title">
                                    <div id="event-data">
                                        <p class="p-event-data"><%= dados.day %></p>
                                        <hr>
                                        <p class="p-event-data"><%= dados.month %></p>
                                    </div>
                                
                                    <p id="p-event-title"><%= dados.nome %></p>
                                </div>
                            </div>

                            <div id="event-info-container">
                                <ul>
                                    <li>
                                        <i class="material-icons">mail</i>
                                        <%= dados.tipo %> - Organizado por @<%= dados.organizador %>
                                    </li>
                                    <hr>
                                    <li>
                                        <i class="material-icons">schedule</i>
                                        Dia <%= dados.day %>, do mês <%= dados.month %> - 
                                        das <%= dados.hora_inicio %> às <%= dados.hora_fim %>
                                    </li>
                                    <hr>
                                    <li>
                                        <i class="material-icons">location_on</i>
                                        <%= dados.endereco %>
                                    </li>
                                    <hr>
                                    <li>
                                        <i class="material-icons">description</i>
                                        Descrição:
                                    </li>
                                </ul>
                            </div>
    
                            <div id="event-description">
                                <p id="p-event-description">
                                    <%= dados.descricao %>
                                </p>
                            </div>  

                            <form action="/editarEvento" method="post">
                                <input type="hidden" name="eventId" value="<%= dados.id %>">
                                <button id="btt-edit">
                                    Editar seu evento
                                </button>
                            </form>
                        </div>
                    <% }) %>
                <% } %>
            </div>
        </div>
    </div>
</body>
</html>