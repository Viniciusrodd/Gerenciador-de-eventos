<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Meus grupos</title>
    <link rel="stylesheet" href="../../../css/eventsCSS/meus-eventosCss/meus-eventos.css">
    <link rel="stylesheet" href="../../../css/eventsCSS/meus-eventosCss/meus-eventosMobile.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="shortcut icon" href="../../../imagens/favicon.ico" type="image/x-icon">
</head>
<body>
    <div id="div-pai">
        <header>
            <h1 class="titulo">Gerência</h1>
            <a href="/homepage">
                <div id="header-image">
                
                </div>
            </a>
            <h1 class="titulo">Eventos</h1>
        </header>

        <div id="container-titulo">
            <h1 id="titulo-2">Meus grupos:</h1>
            <h3 id="h3-voltar">
                <a href="/homepage">
                    Voltar para homepage
                    <i class="material-icons">undo</i>
                </a>
            </h3>
        </div>

        <div id="container-homepage">
            <div id="container-publications">
                <% if(grupos.length === 0) { %>
                    <div id="modal" class="modal">
                        <div class="modal-content">
                            <h2 id="h2-modal">Você não criou nenhum grupo ainda</h2>
                            <i class="material-icons">close</i> <br>
                            <a href="/criarGrupos">
                                <button id="close-modal-btn" class="modal-button">Criar grupo</button>
                            </a>
                        </div>
                    </div>
                <% } else { %>
                    <% grupos.forEach((dados) => { %>
                        <div id="publications-homepage">
                            <div id="event-banner">
                                <% if (dados.imageBase64) { %>
                                    <img id="img-banner" src="<%= dados.imageGroup %>" alt="">
                                <% } else { %>
                                    <img id="img-banner" src="../../imagens/SEM FOTO DE GRUPO.png" alt="">
                                <% } %>

                                <div id="event-title">
                                    <p id="p-event-title"><%= dados.name %></p>
                                </div>
                            </div>

                            <div id="event-info-container">
                                <ul>
                                    <li>
                                        <i class="material-icons">person</i>
                                        Quantidade de membros: <%= dados.memberCount %>
                                    </li>
    
                                    <hr>
                                    <li>
                                        <i class="material-icons">description</i>
                                        Descrição:
                                    </li>
                                    <div id="event-description" class="event-description-perso">
                                        <p id="p-event-description">
                                            <%= dados.description %>
                                        </p>
                                    </div>
                                    <br>
                                    <hr>
                                    <li>
                                        <i class="material-icons">description</i>
                                        Regras:
                                    </li>
                                    <div id="event-description" class="event-description-perso">
                                        <p id="p-event-description">
                                            <%= dados.rules %>                                        
                                        </p>
                                    </div>
                                </ul>
                            </div>    

                            <a href="/acessarGrupo/<%= dados.id %>">
                                <button id="btt-participation" class="btt-participation-perso">
                                    Acessar seu grupo
                                </button>
                            </a>
                            <form action="/editarGrupo" method="get">
                                <input type="hidden" name="groupId" value="<%= dados.id %>">
                                <button id="btt-edit">
                                    Editar seu grupo
                                </button>
                            </form>
                        </div>
                    <% }) %>
                <% } %>
            </div>
        </div>
    </div>
</body>
</html>